{
  "name": "markdown-editor-core",
  "version": "1.0.0",
  "description": "Markdown Editor Core - a JS Markdown editor with no fancy UI but an awesome API",
  "license": "MIT",
  "keywords": [
    "markdown",
    "editor",
    "javascript",
    "typescript",
    "wysiwyg"
  ],
  "main": "demo/demo.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/lenardfunk/markdown-editor-core.git"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "./scripts/build.sh",
    "pack": "./scripts/pack.sh",
    "format:check": "prettier -c .",
    "format:write": "prettier -w .",
    "deps:check": "ncu",
    "commit": "cz"
  },
  "private": true,
  "dependencies": {
    "markdown-editor-core": "./build/markdown-editor-core-0.0.9.tgz"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/lodash-es": "^4.17.4",
    "@types/codemirror": "^0.0.102",
    "@types/prettier": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.6",
    "npm-check-updates": "^10.2.5",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
